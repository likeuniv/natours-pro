header.header
   nav.nav.nav--tours
      a.nav__el(href='/')
         svg.header-home-icon
            use(xlink:href='/img/icons.svg#icon-home')
   .header__logo
      img(src="/img/logo-white.png" alt="Natours logo")
   nav.nav.nav--user 
      if user
         a.nav__el.nav__el--logout(href='#',title="logout")
            svg.card__icon.header-home-icon
               use(xlink:href='/img/icons.svg#icon-log-out')
         a.nav__el(href='/me') 
            if user.photo
               img.nav__user-img(src=`/img/users/${user.photo}` alt=`Photo of ${user.name}`)
            else
               svg.card__icon.header-home-icon(style="margin-right:1rem")
                  use(xlink:href='/img/icons.svg#icon-user')
            span= user.name
      else
         a.nav__el(href="/login") Login
         a.nav__el.nav__el--cta(href="/signup") Sign up                                                                              